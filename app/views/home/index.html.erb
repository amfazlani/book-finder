<div class="row">
  <% @results.each_slice(2) do |results| %>
    <% results.each do |result| %>
      <% if result[:image_url] %>
        <div class="col-sm-4">
          <div class="card">
            <img class="card-img-top" src="<%=result[:image_url]%>" alt="Card image cap" style="width: 300px;height: 300px">

            <div class="card-body">
              <h5 class="card-title"><%= result[:title]%> </h5>

              <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
              <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
          </div>
        </div>
      <% end %>
    <%end%>
  <%end%>
</div>

