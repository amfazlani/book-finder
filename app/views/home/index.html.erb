  <% @results.each_slice(2) do |results| %>
    <div class="row card-row">
      <% results.each do |result| %>
        <div class="col-md-6">
          <div class="card">
            <% if result[:image_url] %>
              <img class="card-img-top" src="<%=result[:image_url]%>" alt="" style="width: 300px;height: 300px">
            <% else %>
              <img class="card-img-top" src="https://via.placeholder.com/300" alt="" style="width: 300px;height: 300px">
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= result[:title]%> </h5>
              <a href="<%= result[:link_to_loc]%>" class="btn loc-btn" target="_blank">Library of Congress</a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <%end%>
</div>
